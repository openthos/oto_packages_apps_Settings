<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/power_manager_settings"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!--energy saving -->
    <PreferenceScreen
        android:key="energy_saving_mode"
        android:title="@string/energy_saving_mode_title"
        android:summary="@string/energy_saving_mode_summary" />

    <!--sleep time setting-->
    <PreferenceScreen
        android:key="screen_timeout"
        android:title="@string/screen_timeout"
        android:summary="@string/screen_timeout_summary"
        settings:keywords="@string/keywords_display_screen_timeout"
        android:fragment="com.android.settings.ScreenTimeoutSettings"/>

    <!--lock screen time setting -->
    <PreferenceScreen
        android:key="screen_lock_time"
        android:title="@string/screen_lock_time_title"
        android:summary="@string/screen_lock_time_summary"
        android:fragment="com.android.settings.ScreenLockTimeSettings"/>

    <!--battery info -->
    <PreferenceScreen
        android:key="battery_info"
        android:title="@string/battery_info_title"
        android:fragment="com.android.settings.fuelgauge.PowerUsageSummary"/>

    <!--keep screen on -->
    <SwitchPreference
        android:key="keep_screen_on"
        android:title="@string/keep_screen_on"
        android:summary="@string/keep_screen_on_summary"/>

</PreferenceScreen>
